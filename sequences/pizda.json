{
  "name": "pizda",
  "display_name": "Kirkorov-mod",
  "description": "Быстро отучает говорить \"да\" в чятике.",
  "version": [1,0,0,0],
  "triggers": [
    {
      "type": "text_exact",
      "params": ["да"],
      "subseq": "main"
    },
    {
      "type": "text_exact",
      "params": ["твоя"],
      "subseq": "tvoya",
      "tag": "pizda_message"
    }
  ],
  "subseqs":
  {
    "main": [
      {
        "action": "get_uid",
        "params": ["uid"]
      },
      {
        "action": "check_userlist",
        "params": ["*uid","pizda_unsubscribe","user_unsubscribed"]
      },
      {
        "action": "if_eq",
        "params": [true, "user_unsubscribed","exit","subscribed"]
      }
    ],
    "subscribed": [
      {
        "action": "load_env",
        "params": ["pizda_chance","pizda_chance"]
      },
      {
        "action": "roll_chance",
        "params": ["pizda_chance","pizda","exit"]
      }
    ],
    "pizda": [
      {
        "action": "fetch_from_pool",
        "params": ["pizda_pool","pizda_message_id"]
      },
      {
        "action": "emit_saved_message",
        "params": ["pizda_message_id",-1,"pizda_message",-1]
      }
    ],
    "tvoya": [
      {
        "action": "fetch_from_pool",
        "params": ["tvoya_pool","pizda_message_id"]
      },
      {
        "action": "emit_saved_message",
        "params": ["pizda_message_id",-1,"tvoya_message", -1]
      }
    ],
    "exit": []
  },
  "config_vars": {
    "name": "pizda_chance",
    "display_name": "Шанс срабатывания пизды"
  }
}